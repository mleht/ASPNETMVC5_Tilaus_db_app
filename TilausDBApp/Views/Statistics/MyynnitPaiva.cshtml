
@{
    ViewBag.Title = "MyynnitPaiva";
}

@section scripts{
    <script type="text/javascript">
	let labelTexts = [@Html.Raw(ViewBag.weekdays)];
	let dataValues = [@ViewBag.ordertimes];
	var ctx = document.getElementById('barcanvas').getContext('2d');
	var myChart = new Chart(ctx, {
        type: 'horizontalBar',
            data: {
                labels: labelTexts,
                datasets: [{
                    label: 'Tilauksia / viikonpäivä',
                    data: dataValues,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    xAxes: [{  
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
}

<h2>Tilauksia per viikonpäivä</h2>
<p><a href="/Statistics/Index"><i class="fa fa-backward" aria-hidden="true"> Takaisin tilastot sivulle</i></a></p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <canvas id="barcanvas"></canvas>
        </div>
    </div>
    <div style="text-align: center">

    </div>
</div>